<!DOCTYPE html>
<center>
	{{>spacer}}
	<a id="all_score" class="button score selected"> All Scores </a>
	<a id="slide_score" class="button score"> Slide Scores </a>
	<a id="sudoku_score" class="button score"> Sudoku Scores </a>
	<a id="memory_score" class="button score"> Memory Scores </a>
	
	<div class="scoreboard">
		<table id="scores" class="table">
		<tr>
			<th> Game </th>
			<th> Player Name </th>
			<th> Time </th>
		</tr>
		{{#each entry}}
		{{>entry entry=.}}
		{{/each}}
		</table>
	</div>
	<a class="button" href="/">Back to Home</a>
	{{>spacer}}
</center>